{
    "name": "tomwilford/slim-sqids",
    "type": "library",
    "description": "Slim Framework Sqids middleware and service",
    "keywords": [
        "slim",
        "sqids",
        "middleware"
    ],
    "autoload": {
        "psr-4": {
            "TomWilford\\SlimSqids\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TomWilford\\SlimSqids\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Tom Wilford",
            "email": "hello@jollyblueman.com",
            "homepage": "https://jollyblueman.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "sqids/sqids": "^0.5.0",
        "psr/http-message": "^2.0",
        "psr/http-server-middleware": "^1.0",
        "slim/slim": "^4.14"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "squizlabs/php_codesniffer": "^3.11",
        "phpstan/phpstan": "^2.1",
        "nyholm/psr7": "^1.8"
    },
    "scripts": {
        "sniffer:check": "phpcs --standard=phpcs.xml",
        "stan": "phpstan analyse src --memory-limit=-1 --level=8",
        "test": "phpunit --do-not-cache-result --colors=always --display-warnings --display-deprecations",
        "test:all": [
            "@sniffer:check",
            "@stan",
            "@test"
        ]
    }
}
